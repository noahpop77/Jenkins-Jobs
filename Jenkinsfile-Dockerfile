pipeline {
    agent { dockerfile true }
    stages {
        stage('Preparing') {
            steps {
                sh 'echo Preparing...'
            }
        }
        stage('Running Docker File') {
            steps {
                sh 'echo Hello World!'
                sh 'echo customEnvVar = $customEnvVar'
            }
        }
        stage('Cleanup') {
            steps {
                sh 'echo Cleanup...'
            }
        }
    }
}