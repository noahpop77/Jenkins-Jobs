pipeline {
    agent { 
        dockerfile true 
        label 'docker-agent'
    }
    stages {
        stage('Preparing') {
            steps {
                sh 'echo Preparing...'
            }
        }
        stage('Running Docker File') {
            steps {
                sh 'echo Hello World!'
                sh 'echo customEnvVar = $customEnvVar'
                sh 'echo otherEnvVar = $otherEnvVar'
            }
        }
        stage('Cleanup') {
            steps {
                sh 'echo Cleanup...'
            }
        }
    }
}