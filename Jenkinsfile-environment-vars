pipeline {
    agent any
    environment { 
        name = 'BRIAN SAWA'
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                echo env.BUILD_NUMBER
                echo env.BUILD_URL
                echo env.JOB_NAME
                echo 'My name is ' env.name
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                echo 'Deploying HARD....'
            }
        }
    }
}
