pipeline {
    agent {
        docker { image 'ubuntu:latest' }
    }
    stages {
        stage('Pre-Start'){
            steps {
                sh 'echo This is a good stage, the best!'
            }
        }
        stage('Debug') {
            steps {
                sh 'node --version'
            }
        }
        stage('Finishing') {
            steps {
                sh 'echo This is a good stage, the best and the last!'
            }
        }

    }
}